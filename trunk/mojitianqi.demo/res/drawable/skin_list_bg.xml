<?xml version="1.0" encoding="utf-8"?>
<selector android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ff121212" android:endColor="#ff434343" android:angle="270.0" />
            <stroke android:width="0.0dip" android:color="#ffd3cfff" />
            <corners android:radius="10.0dip" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item>	//无焦点
<shape>
            <gradient android:startColor="#ff121212" android:endColor="#ff434343" android:angle="270.0" />
            <stroke android:width="0.0dip" android:color="#ffd3cfff" />
            <corners android:radius="10.0dip" />
