<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widgetlisttop"
	android:layout_width="fill_parent"
	android:layout_height="55dp"
	>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="48dip"
	    android:background="@drawable/top_black_bar"
	    android:layout_alignParentTop="true"
	    >
		<ImageView android:id="@+id/logo_small"   android:src="@drawable/dominos_small_logo" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginLeft="20dp"
		android:layout_weight="2"
		/>
		<TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_gravity="center_vertical"
		    android:gravity="center_horizontal"
		    android:textStyle="bold"
		    android:textColor="#FFFFFF"
		    android:layout_weight="2"
		    android:text="@string/mainTitleResults" 
		    />
		<ImageButton android:id="@+id/search"   android:src="@drawable/search" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		 android:layout_gravity="center_vertical"
		 android:paddingLeft="20dp"
		 android:background="#00000000"
		 android:layout_weight="1"
		/>
		<ImageButton android:id="@+id/info"   android:src="@drawable/info" 
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		 android:layout_gravity="center_vertical"
		 android:background="#00000000"
		 android:layout_weight="2"
		/>
	</LinearLayout>
</RelativeLayout>